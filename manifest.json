{
  "manifest_version": 3,
  "name": "Free Youtube Distraction",
  "version": "1.0",
  "description": "Make your YouTube experience more focused by hiding various UI elements",
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": ["storage"]
}
