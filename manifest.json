{
  "manifest_version": 3,
  "name": "Distraction-Free YouTube",
  "version": "1.0",
  "description": "Make YouTube less distracting by hiding various UI elements",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": ["storage"]
}
